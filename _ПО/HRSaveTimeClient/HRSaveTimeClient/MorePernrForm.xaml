<Window x:Class="HRSaveTimeClient.MorePernrForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MorePernrForm" Height="400" Width="300" WindowStyle="None" ResizeMode="NoResize" BorderBrush="Aqua" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">
    <Grid>
        <DataGrid x:Name ="Pernr_dG" HorizontalAlignment="Left"  VerticalAlignment="Top" Height="350" Width="300" Background="{x:Null}" Margin="0,0,0,-195">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Табельный номер" Width="*" FontSize="20" Binding="{Binding Path=Pernr1}"/>
            </DataGrid.Columns>
        </DataGrid>

        <Grid x:Name ="OkMorePernrReportsButton" Background="#0049db" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="52" Margin="0,0,10,10" MouseEnter="OkMorePernrReportsButton_MouseEnter" MouseLeave="OkMorePernrReportsButton_MouseLeave" PreviewMouseLeftButtonDown="OkMorePernrReportsButton_PreviewMouseLeftButtonDown" >
            <Image Source="Resources/Reports/OK.png" />
        </Grid>

        <Grid x:Name ="CencelMorePernrReportsButton" Background="#8d8d8d" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="100" Margin="0,0,70,10" MouseEnter="CencelMorePernrReportsButton_MouseEnter" MouseLeave="CencelMorePernrReportsButton_MouseLeave" PreviewMouseLeftButtonDown="CencelMorePernrReportsButton_PreviewMouseLeftButtonDown">
            <Image Source="Resources/People/Cancel.png"/>
        </Grid>
    </Grid>
</Window>
